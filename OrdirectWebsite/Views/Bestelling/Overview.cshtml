@model OrdirectWebsite.BestellingViewModel
@{
    ViewData["Title"] = "Overview";
}

<h2>Overview</h2>

<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="table thead-dark">
                <label>Gerechten</label>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-1">Naam</th>
                            <th class="col-md-2">Descriptie</th>
                            <th class="col-md-3">Acties</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.gerechtDetailViewModels[0].Naam != null && Model.gerechtDetailViewModels[0].Descriptie != null)
                        {
                            @foreach (GerechtDetailViewModel item in Model.gerechtDetailViewModels)
                            {
                                <tr>
                                    <td class="col-md-1">
                                        @Html.DisplayName(item.Naam)
                                    </td>
                                    <td class="col-md-2">
                                        @Html.DisplayName(item.Descriptie)
                                    </td>
                                    <td class="col-md-3">
                                        @Html.ActionLink(controllerName: "Bestelling", actionName: "VoegToeAanHuidigeBestelling", linkText: " + ", routeValues: item)
                                    </td>
                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td>
                                    <text> Dit restaurant heeft nog geen gerechten.</text>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <div class="col-6">
            <div class="table thead-dark">
                <label>Huidige Bestelling</label>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-1">Naam</th>
                            <th class="col-md-2">Aantal</th>
                            <th class="col-md-3">Acties</th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.HuidigeBestelling != null)
                        {
                            @foreach (GerechtDetailViewModel item in Model.HuidigeBestelling)
                            {
                                <tr>
                                    <td class="col-md-1">
                                        @Html.DisplayName(item.Naam)
                                    </td>
                                    <td class="col-md-2">
                                        @Html.DisplayName(item.Aantal.ToString())
                                    </td>
                                    <td class="col-md-3">
                                        @Html.ActionLink(controllerName: "Bestelling", actionName: "VerwijderVanHuidigeBestelling", linkText: " - ", routeValues: item)
                                    </td>
                                </tr>
                            }

                        }
                        else
                        {
                            <tr>
                                <td>
                                    <text class="text-center">Je hebt nog geen gerechten toegevoegd aan je huidige bestelling</text>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <a asp-controller="Bestelling" asp-action="Bestellen"> Bestellen</a>
                <button asp-controller="Bestelling" asp-action="Bestellen">Bestelling Plaatsen</button>
            </div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-6">
            <div class="table thead-dark">
                <label> Vorige Rondes</label>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-1">
                                Rondes
                            </th>
                            <th class="col-md-2">
                                Acties
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Rondes != null)
                        {
                            @foreach (int i in Model.Rondes)
                            {
                                <tr>
                                    <td class="col-md-1">
                                        @Html.DisplayName(i.ToString())
                                    </td>
                                    <td class="col-md-2">
                                        @Html.ActionLink("Details", "Overview", "Bestelling", new { x = i })
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>

            </div>
        </div>
        <div class="col-6">
            <div class="table thead-dark">
                <label>Bestelling</label>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-md-1">
                                Naam
                            </th>
                            <th class="col-md-2">
                                Aantal
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.SelectedRonde != null)
                        {
                            @foreach (GerechtDetailViewModel item in Model.SelectedRonde)
                            {
                                <tr>
                                    <td class="col-md-1">
                                        @Html.DisplayName(item.Naam)
                                    </td>
                                    <td class="col-md-2">
                                        @Html.DisplayName(item.Aantal.ToString())
                                    </td>
                                </tr>

                            }

                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

</div>


