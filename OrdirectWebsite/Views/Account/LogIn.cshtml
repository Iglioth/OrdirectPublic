@model OrdirectWebsite.AccountDetailViewModel
@{
    ViewData["Title"] = "LogIn";
}

<title>LogIn</title>

<head>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css" media="screen" />
</head>

<body>
    <h2> Log In Here:</h2>
    <div class="container">
        <div class="col-4"></div>
        <div class="col-4">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd>
                    @Html.TextBox("email")
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Wachtwoord)
                </dt>
                <dd>
                    @Html.TextBox("wachtwoord")

                </dd>
            </dl>

            <form asp-action="LogIn">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Wachtwoord"></label>
                    <input asp-for="Wachtwoord" />
                    <span asp-validation-for="Wachtwoord"></span>
                </div>
            </form>

        </div>
        <div class="col-4"></div>

    </div>
</body>

